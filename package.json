{
  "name": "cpiu",
  "version": "0.2.4",
  "description": "A Node.js interface for CPI-U data provided by the U.S. Bureau of Labor Statistics",
  "main": "index.js",
  "scripts": {
    "test": "nyc mocha",
    "lint": "eslint .",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "docs": "documentation build index.js -f html -o docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clpo13/cpiu.git"
  },
  "keywords": [
    "cpi",
    "bls",
    "inflation",
    "bureau of labor statistics",
    "consumer price index"
  ],
  "author": "Cody Logan <clpo13@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/clpo13/cpiu/issues"
  },
  "homepage": "https://github.com/clpo13/cpiu#readme",
  "devDependencies": {
    "acorn": "^7.1.1",
    "chai": "^4.2.0",
    "codecov": "^3.5.0",
    "documentation": "^13.0.2",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "mocha": "^7.1.1",
    "nock": "^12.0.3",
    "nyc": "^15.0.0"
  },
  "dependencies": {
    "axios": "^0.21.2",
    "dotenv-safe": "^6.1.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true
    },
    "extends": "standard",
    "ignorePatterns": [
      "docs/"
    ]
  }
}
